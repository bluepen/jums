.menubar{
	margin: 0 auto;
	width: 1010px;
	height: 100px;
	background-color: #ffffff;

}
  .menubar ul{
    padding:0px;
    margin-top: 0px;

  }
  .menubar li{
    list-style: none;
    float:left;
    text-align:center;

  }

  .menubar a{
  	width:200px;
    height: 90px;
  	display:block;
 	color:#1e90ff;
	text-align: center;

	margin-right: 1px;

  }
  .menubar a:link,.menubar a:visited{
  color:#ffffff;
  font-size: 30px;
  background-color: #483d8b;
  text-decoration:none;
  } 
  .menubar a:hover{
  	font-size: 30px;
  color:#483d8b;
  background-color: #ffffff;

  text-decoration:none;
  }
